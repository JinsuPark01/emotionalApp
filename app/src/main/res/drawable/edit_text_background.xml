<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 색상과 두께 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="8dp" />

    <!-- 내부 여백 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
