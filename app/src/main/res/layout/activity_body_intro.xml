<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- 1) 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="소개"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 2) 내용 스크롤 -->

    <!-- 3) 하단 네비게이션 바 포함 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 헤딩 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="신체자각이란?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 설명 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="몸에서 일어나는 감각을 알아차리고,\n판단하지 않고 그대로 느끼는 능력입니다."
                android:textSize="16sp" />

            <!-- 추가 설명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="신체자각이 중요한 이유"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="감정보다 먼저 나타나는 신호는 몸에 있습니다.\n몸을 잘 느끼면 감정을 더 잘 이해하고 다룰 수 있어요.\n스트레스, 불안, 무기력감을 조절하는데 도움이 됩니다."
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="몸이 보내는 신호를 놓치지 않을 때,\n우리는 자신과 연결됩니다."
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_intro_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="@drawable/intro_2week"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
