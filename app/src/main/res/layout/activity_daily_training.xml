<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <!-- 제목 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 훈련"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 탭 메뉴 박스 (내부는 padding 줌) -->
        <LinearLayout
            android:id="@+id/graphNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tabToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="훈련 일지"
                    android:textStyle="bold" />
                <!-- 검정 밑줄 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000" />
            </LinearLayout>
            <!-- 전체 훈련 (선택된 탭 + 검정 밑줄) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tabAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="전체 훈련"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!-- 밑줄은 양옆 여백 없이 전체 길이로 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />
    </LinearLayout>
    <!-- 훈련 일지(스크롤뷰) -->
    <!-- 훈련 일지 내용 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTrainingLogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="훈련 일지"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- 훈련 일지 항목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n&lt;1주차 - 정서 인식 훈련&gt;"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작 전 : 주차별 점검"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1일 : 정서 선택(오전, 오후) + 닻내리기"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2일 : 정서 선택(오전, 오후) + 닻내리기"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3일 : 정서 선택(오전, 오후) + 닻내리기
"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4일 : 정서 선택(오전, 오후) + ARC"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5일 : 정서 선택(오전, 오후) + ARC"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6일 : 정서 선택(오전, 오후) + ARC"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7일 : 정서 선택(오전, 오후) + 닻 내리기 or ARC"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n&lt;2주차 - 신체자각 훈련&gt;"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작 전 : 주차별 점검"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1일 : 전체 몸 스캔 인식"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2일 : 먹기 명상"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3일 : 감정-신체 연결 인식"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4일 : 특정 감각 집중하기"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5일 : 바디 스캔"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6일 : 바디 스캔"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7일 : 먹기 명상"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n&lt;3주차 - 인지재구성 훈련&gt;"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작 전 : 주차별 점검"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1일 : 인지적 평가"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2일 : 인지적 평가"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3일 : 생각의 덫"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4일 : 생각의 덫"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5일 : 생각의 덫"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6일 : 자동적 평가"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7일 : 자동적 평가"
                android:textSize="14sp"
                android:paddingBottom="8dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n&lt;4주차 - 인지재구성 훈련&gt;"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작 전 : 주차별 점검"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1일 : 정서회피 교육"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2일 : 회피 일지 + 정서 머무르기"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3일 : 회피 일지 + 정서 머무르기"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4일 : 정서-주도 행동 교육"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5일 : 반대 행동 + 대안 행동"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6일 : 반대 행동 + 대안 행동"
                android:textSize="14sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7일 : 반대 행동 + 대안 행동"
                android:textSize="14sp"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 바 (include 방식) -->
    <include layout="@layout/nav_bottom" />
</LinearLayout>