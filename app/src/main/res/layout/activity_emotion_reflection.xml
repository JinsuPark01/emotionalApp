<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감정 기록하기"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- 콘텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 질문 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정에 머무르고 나서 더 선명해진 감정을 적어주세요."
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/edit_text_emotion_clarified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="예: 불안함, 답답함"/>

            <!-- 질문 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금 기분이 조금 달라졌나요? 무엇을 느꼈나요?"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="24dp"/>

            <EditText
                android:id="@+id/edit_text_mood_changed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:hint="예: 마음이 조금 차분해졌어요."/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/navPage"
        layout="@layout/nav_page" />

</LinearLayout>