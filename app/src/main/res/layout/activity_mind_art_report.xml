                android:inputType="none"/>

            <!-- 질문 8 -->
            <TextView
                android:id="@+id/question8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상황 2. 기분이 좋은 날\n예) 친구들과 즐거운 시간을 보낸 후 / 좋은 소식을 들은 날 / 따뜻한 날씨를 즐기는 날\n\n2. 같은 그림을 봤을 때, 어떤 상황으로 보이나요?"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/answer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="답변을 입력하세요"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:inputType="none"/>

            <!-- 질문 9 -->
            <TextView
                android:id="@+id/question9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-1. 이 상황에서 느껴지는 감정은 무엇인가요?"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/answer9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="답변을 입력하세요"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:inputType="none"/>

            <!-- 질문 10 -->
            <TextView
                android:id="@+id/question10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 같은 그림인데도 상황에 따라 다르게 느껴졌나요? 나의 감정 상태가 해석에 어떤 영향을 준 것 같나요?"
                android:textSize="16sp"
