                android:layout_height="wrap_content"
                android:hint="답변을 입력하세요"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:inputType="none"/>

            <!-- 질문 5 -->
