<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/optionContainerCustomWrapper"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 질문 -->
        <TextView
            android:id="@+id/textQuestionCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단서 선택하기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- 옵션 리스트를 추가할 컨테이너 -->
        <LinearLayout
            android:id="@+id/optionContainerCustom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 직접 입력 -->
        <EditText
            android:id="@+id/editCustomAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="직접 단서를 입력해보세요"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/btnSaveCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:backgroundTint="@color/button_color_mind"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
