<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 선택"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<해석을 연습할 그림을 2개 골라주세요>"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- 4x3 이미지 그리드 -->
        <GridLayout
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_gravity="center">

            <!-- 12개의 이미지 아이템 -->
            <ImageView
                android:id="@+id/art1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art1" />

            <ImageView
                android:id="@+id/art2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art2" />

            <ImageView
                android:id="@+id/art3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art3" />

            <ImageView
                android:id="@+id/art4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art4" />

            <ImageView
                android:id="@+id/art5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art5" />

            <ImageView
                android:id="@+id/art6"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art6" />

            <ImageView
                android:id="@+id/art7"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art7" />

            <ImageView
                android:id="@+id/art8"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art8" />

            <ImageView
                android:id="@+id/art9"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art9" />

            <ImageView
                android:id="@+id/art10"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art10" />

            <ImageView
                android:id="@+id/art11"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art11" />

            <ImageView
                android:id="@+id/art12"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/art12" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
