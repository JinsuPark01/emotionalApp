<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 질문 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. 여러분들이 느꼈던 것과 다른 해석을 만들어볼까요?"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="답변을 입력하세요"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 🔽 도움 질문 열기 버튼 -->
        <TextView
            android:id="@+id/toggleQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*도움이 될 질문 목록이에요!"
            android:textColor="@color/purple_700"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp" />

        <!-- 🙋 도움 질문 목록 (초기에는 숨김) -->
        <LinearLayout
            android:id="@+id/helpQuestionsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 그 생각이 확실할까요?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 이 생각이 사실이 아니라는 증거는 무엇인가요?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 일어날 가능성이 있는 다른 것들을 나의 강렬한 정서 때문에 놓치고 있지는 않나요?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 지금 내가 이렇게 느끼고 생각하는 데에 영향을 준 여러 가지 요소들이 있다면, 어떤 것들이고 각각이 차지하는 비중은 어느 정도일까요?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 여러분과 같은 생각을 친구가 한다면, 나는 친구에게 뭐라고 말해줄까요?" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>