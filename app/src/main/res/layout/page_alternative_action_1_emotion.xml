<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/FormLabelStyle"
            android:text="1. 어떤 상황이었나요?" />

        <EditText
            android:id="@+id/edit_situation"
            style="@style/FormInputStyle"
            android:hint="무슨 일이 있었는지 짧게 써주세요." />

        <TextView
            style="@style/FormLabelStyle"
            android:text="2. 그때 어떤 감정을 느꼈나요?" />

        <GridLayout
            android:id="@+id/grid_emotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="4" />

        <EditText
            android:id="@+id/tv_direct_input_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"
            android:hint="감정을 작성해 주세요"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/detailed_emotion_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/FormLabelStyle"
                android:layout_marginTop="0dp"
                android:text="세부 감정" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_detailed_emotions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
