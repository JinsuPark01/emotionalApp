<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView android:text="1. 어떤 상황이었나요?" style="@style/FormLabelStyle"/>
    <EditText android:id="@+id/edit_situation" style="@style/FormInputStyle" android:hint="무슨 일이 있었는지 짧게 써주세요."/>
    <TextView android:text="2. 그때 어떤 감정을 느꼈나요?" style="@style/FormLabelStyle"/>
    <EditText android:id="@+id/edit_feeling" style="@style/FormInputStyle" android:hint="예: 화남, 불안, 슬픔 등"/>
    <TextView android:text="3. 어떻게 행동했나요?" style="@style/FormLabelStyle"/>
    <EditText android:id="@+id/edit_action_taken" style="@style/FormInputStyle" android:hint="그때 감정대로 행동했나요?"/>
</LinearLayout>