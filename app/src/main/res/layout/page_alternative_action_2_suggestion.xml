<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- '세부 감정' 부분을 삭제했습니다. -->

    <TextView
        android:id="@+id/alternativeQ"
        android:text="대안 행동 예시(둘 중 하나 이상 작성)" style="@style/FormLabelStyle"
        android:visibility="gone"
        android:layout_marginTop="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_alternative_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <TextView android:text="나만의 대안 행동" style="@style/FormLabelStyle"/>
    <EditText android:id="@+id/edit_custom_action" style="@style/FormInputStyle" android:hint="자유롭게 적어주세요."/>
</LinearLayout>
</ScrollView>